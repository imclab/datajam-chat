<!DOCTYPE html>
<html>
<head>
  <title>Datajam</title>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript">
    window.curl || (curl = {
      baseUrl: '/javascripts',
      pluginPath: '/javascripts/curl/plugin',
      paths: {}
    })
  </script>
  <%= csrf_meta_tag %>

  <%= yield :head %>

</head>
<body class="bare">

  <%= yield %>
  <script type="text/javascript" charset="utf-8">
    window.datajam || (Datajam = {});
    Datajam.DEBUG = <%= (Rails.env.to_s == 'production' && 'false') || 'true' %>;
  </script>
  <script src="/javascripts/curl/curl.js" type="text/javascript" charset="utf-8"></script>

  <%= yield :body %>

</body>
</html>
